<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:movie="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="seat_title_text"
            type="String" />

        <variable
            name="activity"
            type="woowacourse.movie.seatselection.view.MovieSeatSelectionActivity" />

        <variable
            name="movie_selected_seats"
            type="woowacourse.movie.model.MovieSelectedSeats" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/seatSelectionActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".seatselection.view.MovieSeatSelectionActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#EAEAEA"
            app:layout_constraintBottom_toTopOf="@id/bottomLayout"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/topLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/screenBar"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="34dp"
                    android:layout_marginRight="34dp"
                    android:background="#494949"
                    android:gravity="center"
                    android:text="SCREEN"
                    android:textColor="@color/white"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent" />

                <TableLayout
                    android:id="@+id/seatTable"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_marginHorizontal="34dp"
                    android:layout_marginTop="68dp"
                    android:layout_marginBottom="96dp"
                    android:background="@color/white"
                    android:stretchColumns="*"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/screenBar">

                    <TableRow android:layout_weight="1">

                        <TextView style="@style/Seat" />

                        <TextView style="@style/Seat" />

                        <TextView style="@style/Seat" />

                        <TextView style="@style/Seat" />

                    </TableRow>

                    <TableRow android:layout_weight="1">

                        <TextView style="@style/Seat" />

                        <TextView style="@style/Seat" />

                        <TextView style="@style/Seat" />

                        <TextView style="@style/Seat" />

                    </TableRow>

                    <TableRow android:layout_weight="1">

                        <TextView style="@style/Seat" />

                        <TextView style="@style/Seat" />

                        <TextView style="@style/Seat" />

                        <TextView style="@style/Seat" />

                    </TableRow>

                    <TableRow android:layout_weight="1">

                        <TextView style="@style/Seat" />

                        <TextView style="@style/Seat" />

                        <TextView style="@style/Seat" />

                        <TextView style="@style/Seat" />

                    </TableRow>

                    <TableRow android:layout_weight="1">

                        <TextView style="@style/Seat" />

                        <TextView style="@style/Seat" />

                        <TextView style="@style/Seat" />

                        <TextView style="@style/Seat" />

                    </TableRow>

                </TableLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottomLayout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:id="@+id/seatTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:hint="해리 포터와 마법사의 돌"
                android:text="@{seat_title_text}"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/seatPrice"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/seatPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/seatTitle"
                movie:movieSelectedSeatsPrice="@{movie_selected_seats}"
                tools:hint="0" />

            <TextView
                android:id="@+id/seatPriceWon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="@id/seatPrice"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintLeft_toRightOf="@id/seatPrice"
                app:layout_constraintTop_toTopOf="@id/seatPrice" />

            <Button
                android:id="@+id/completeBtn"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle_button"
                android:enabled="@{movie_selected_seats.selectionComplete}"
                android:onClick="@{() -> activity.displayDialog()}"
                android:text="확인"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
