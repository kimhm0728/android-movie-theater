<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="activity"
            type="woowacourse.movie.detail.view.MovieDetailActivity" />

        <variable
            name="movie"
            type="woowacourse.movie.detail.ui.MovieDetailUiModel" />

        <variable
            name="movie_count"
            type="int" />
    </data>

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".detail.view.MovieDetailActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_poster"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    app:imgRes="@{movie.thumbnail}"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@drawable/titanic" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="@{movie.title}"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_poster"
                    tools:text="타이타닉" />

                <TextView
                    android:id="@+id/tv_screening_date_range"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@{@string/screening_date_range(movie.screeningStartDate, movie.screeningEndDate)}"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_title"
                    app:layout_constraintTop_toBottomOf="@+id/tv_title"
                    tools:text="상영일: 2024.3.1 ~ 2024.3.20" />

                <TextView
                    android:id="@+id/tv_running_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@{@string/running_time(movie.runningTime)}"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_title"
                    app:layout_constraintTop_toBottomOf="@+id/tv_screening_date_range"
                    tools:text="러닝타임: 152분" />

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@{movie.description}"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_running_time"
                    app:layout_constraintTop_toBottomOf="@+id/tv_running_time"
                    tools:text="설명1\n설명2\n설명3\n설명4\n설명\n" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/sp_screening_date"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:entries="@{movie.screeningDates}"
                app:layout_constraintEnd_toStartOf="@+id/sp_screening_time"
                app:layout_constraintStart_toStartOf="@+id/btn_minus"
                app:layout_constraintTop_toTopOf="parent" />

            <Spinner
                android:id="@+id/sp_screening_time"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:entries="@{movie.screeningTimes}"
                app:layout_constraintEnd_toEndOf="@+id/btn_plus"
                app:layout_constraintStart_toEndOf="@+id/sp_screening_date"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_minus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:onClick="@{() -> activity.onMinusButtonClick()}"
                android:text="@string/minus_button"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/btn_seat_selection"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sp_screening_date" />

            <TextView
                android:id="@+id/tv_reservation_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(movie_count)}"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/btn_seat_selection"
                app:layout_constraintEnd_toStartOf="@+id/btn_plus"
                app:layout_constraintStart_toEndOf="@+id/btn_minus"
                app:layout_constraintTop_toBottomOf="@+id/sp_screening_date"
                tools:text="1" />

            <Button
                android:id="@+id/btn_plus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:onClick="@{() -> activity.onPlusButtonClick()}"
                android:text="@string/plus_button"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/btn_seat_selection"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sp_screening_time" />

            <Button
                android:id="@+id/btn_seat_selection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:onClick="@{()->activity.onSeatSelectionButtonClick()}"
                android:padding="10dp"
                android:text="@string/seat_selection_button"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</layout>
